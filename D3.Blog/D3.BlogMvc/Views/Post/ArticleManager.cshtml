@using System.Security.Claims
@using D3.Blog.Domain.Enums
@using Infrastructure.Data.Database
@using Infrastructure.Identity.Models
@using Microsoft.AspNetCore.Identity
@model IEnumerable<D3.Blog.Application.ViewModels.Article.ArticleViewModel>
@inject UserManager<AppBlogUser> userManager
@inject SignInManager<AppBlogUser> signInManager
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv=X-UA-Compatible content="IE=edge,chrome=1">
    <meta name=viewport content="width=device-width,initial-scale=1,user-scalable=no,viewport-fit=cover">

    <title>YL-Blog-@ViewBag.Title</title>

    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css">
    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="~/css/home/style.css">
    <link rel="stylesheet" href="~/css/posts/write.css">
    <link rel="stylesheet" href="~/fontawesome-free/css/all.css">
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/lib/markdown/css/editormd.min.css" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/css/jquery/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" href="~/bootstrap-tokenfield/css/bootstrap-tokenfield.min.css">
    <link rel="stylesheet" href="~/bootstrap-tokenfield/css/tokenfield-typeahead.min.css">
    <!--[if lt IE 9]><script src="~/lib/html5.min.js"></script><![endif]-->
    <style>
        #quick-search > ul,li {
            padding: 0;
            margin: 0;
        }
        #quick-search ul {
            display: flex;
            line-height: 30px;
            padding: 0 10px;
            margin: 5px 5px;
        }
            #quick-search ul li {
                list-style: none;
                margin-right: 20px;
                border-bottom: 2px solid white;
            }
                #quick-search ul .active {
                    border-bottom: 2px solid #309dda;
                }
                #quick-search ul li:hover {
                    border-bottom: 2px solid #309dda;
                    cursor: pointer;
                }
        #blogtype1:before {
            content: '';
            display: block;
            left: -4px;
            top: 6px;
            width: 8px;
            height: 8px;
            position: absolute;
            transform: rotate(45deg);
            background-color: #5bea37;
        }
        #blogtype2:before {
            content: '';
            display: block;
            left: -4px;
            top: 6px;
            width: 8px;
            height: 8px;
            position: absolute;
            transform: rotate(45deg);
            background-color: #3ba8f5;
        }
        #blogtype3:before {
            content: '';
            display: block;
            left: -4px;
            top: 6px;
            width: 8px;
            height: 8px;
            position: absolute;
            transform: rotate(45deg);
            background-color: #f9cd2f;
        }
        .info {
            margin-left: 30px;
        }
    </style>
</head>
<body>
    <div id="app">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div id="dismiss">
                <i class="fas fa-arrow-left"></i>
            </div>
            <div class="sidebar-header">
                <img src="https://mdbootstrap.com/img/logo/mdb-transparent.png" height="50" alt="mdb logo">
            </div>
            <ul id="side-menu" class="list-unstyled components">
                @if (User.Identity.IsAuthenticated)
                {
                    <div id="side-user">
                        <p style="padding-top: 0px;padding-bottom: 0px; padding-left: 20px;">@User.Identity.Name</p>
                        <ul>
                            <li title="个人中心"><i class="far fa-user-circle"></i></li>
                            <li title="草稿"><i class="fas fa-file-alt"></i></li>
                            <li title="我的收藏"><i class="fas fa-star"></i></li>
                            <li title="我的评论"><i class="fas fa-tag"></i></li>
                            <li title="我的通知"><i class="fas fa-bell"></i></li>
                        </ul>
                    </div>
                }
                else
                {
                    <p>Welcome</p>
                }

                <li class="">
                    <a asp-controller="Home" asp-action="HomePage">首页</a>
                </li>
                <li>
                    <a href="#">文章</a>
                </li>
                <li>
                    <a href="#">工具技巧</a>
                </li>
                <li>
                    <a href="#">话题心得</a>
                </li>
            </ul>

            <ul class="list-unstyled CTAs">
                @if (User.Identity.IsAuthenticated)
                {
                    <li data-flag="1" style="padding-top: 0;">
                        <a data-flag="1" asp-controller="Account" asp-action="Logout"><i data-flag="1" class="fas fa-sign-out-alt"></i><span data-flag="1" class="faw">退出登录</span></a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="#" class="download" data-toggle="modal" data-target="#Login">登录</a>
                    </li>
                }

            </ul>
        </nav>
        <div class="wrapper">
            <!-- Page Content  -->
            <div id="content">
                <nav class="navbar navbar-expand-lg navbar-light bg-white" style="margin-bottom: 10px">
                    <div class="container">
                        <a class="" id="sidebarCollapse" style="font-size: 25px;width: 60px;text-align: center;">
                            <i class="fas fa-align-justify"></i>
                        </a>
                        <a class="navbar-brand mylogo" href="#">
                            <img src="https://mdbootstrap.com/img/logo/mdb-transparent.png" height="30" alt="mdb logo">
                        </a>
                        <ul id="menu" class="nav navbar-nav mr-auto menu">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="HomePage">首页</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">文章</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">工具技巧</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">话题心得</a>
                            </li>
                        </ul>
                        <ul id="useropt" class="nav navbar-nav ml-auto useropt">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li data-flag="1" id="user-info" style="position: relative">
                                    <a data-flag="1" v-on:click="dropDownOpt($event)" class="nav-link" href="#"><i data-flag="1" class="fa fa-user"></i>&nbsp;&nbsp;@User.Identity.Name&nbsp;&nbsp;<i data-flag="1" class="fa fa-caret-down"></i></a>
                                    <ul data-flag="1" id="usr-opt" class="user-opt-list" style="z-index: 9999">
                                        <li data-flag="1">
                                            <a data-flag="1" href="#"><i data-flag="1" class="far fa-user-circle"></i><span data-flag="1" class="faw">我的主页</span></a>
                                        </li>
                                        <li data-flag="1">
                                            <a data-flag="1" href="#"><i data-flag="1" class="fas fa-file-alt"></i><span data-flag="1" class="faw">草稿</span></a>
                                        </li>
                                        <li data-flag="1">
                                            <a data-flag="1" href="#"><i data-flag="1" class="fas fa-star"></i><span data-flag="1" class="faw">我的收藏</span></a>
                                        </li>
                                        <li data-flag="1">
                                            <a data-flag="1" href="#"><i data-flag="1" class="fas fa-tag"></i><span data-flag="1" class="faw">我的评论</span></a>
                                        </li>
                                        <li data-flag="1">
                                            <a data-flag="1" href="#"><i data-flag="1" class="fas fa-bell"></i><span data-flag="1" class="faw">我的通知</span></a>
                                        </li>
                                        @if (User.HasClaim(ClaimTypes.Role, "Admin") || User.HasClaim(ClaimTypes.Role, "admin"))
                                        {
                                            <li data-flag="1">
                                                <a data-flag="1" asp-area="Admin" asp-controller="Admin" asp-action="Index"><i data-flag="1" class="fas fa-cogs"></i><span data-flag="1" class="faw">管理</span></a>
                                            </li>
                                        }
                                        else
                                        { }
                                        <hr data-flag="1" />
                                        <li data-flag="1" style="padding-top: 0;">
                                            <a data-flag="1" asp-controller="Account" asp-action="Logout"><i data-flag="1" class="fas fa-sign-out-alt"></i><span data-flag="1" class="faw">退出登录</span></a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li id="user-login" class="nav-item" style="width: 50px;">
                                    <a class="nav-link" href="#" data-toggle="modal" data-target="#Login">登录</a>
                                </li>
                            }

                        </ul>
                    </div>
                </nav>
                <div data-flag="1" id="search-posts">
                    <form data-flag="1" asp-controller="Home" asp-action="Search" method="post">
                        <input data-flag="1" type="text" placeholder="请输入搜索内容" name="searchtext" id="searchtext" style="line-height: 30px;width: 400px;border: 1px solid lightblue;padding-left:10px" />
                        <button data-flag="1" type="submit" style="line-height: 30px;border: none;background-color: #309dda;width: 60px;border: 1px solid #309dda;">搜索</button>
                    </form>
                </div>
                <div class="container" style="display: flex; padding: 0 25px;">
                    <div id="aside-content">
                        <ul>
                            <li class="write-aside"><a href="#">富文本编辑器</a></li>
                            <li class="write-aside"><a asp-controller="Post" asp-action="MarkDownEditor">MarkDown编辑器</a></li>
                        </ul>
                        <hr />
                        <ul>
                            <li class="write-aside checked"><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="1">文章管理</a></li>
                            <li class="write-aside"><a href="#">评论管理</a></li>
                        </ul>
                    </div>
                    <div id="write-area">
                        <div id="quick-search">
                            <ul>
                                @{
                                    switch (ViewBag.flag)
                                    {
                                        case "1":
                                            <li class="active"><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="1">全部</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="2">已发布</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="3">审核中</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="4">草稿箱</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="5">回收站</a></li>
                                            break;
                                        case "2":
                                            <li ><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="1">全部</a></li>
                                            <li class="active"><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="2">已发布</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="3">审核中</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="4">草稿箱</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="5">回收站</a></li>
                                            break;
                                        case "3":
                                            <li ><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="1">全部</a></li>
                                            <li ><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="2">已发布</a></li>
                                            <li class="active"><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="3">审核中</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="4">草稿箱</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="5">回收站</a></li>
                                            break;
                                        case "4":
                                            <li ><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="1">全部</a></li>
                                            <li ><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="2">已发布</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="3">审核中</a></li>
                                            <li class="active"><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="4">草稿箱</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="5">回收站</a></li>
                                            break;
                                        case "5":
                                            <li ><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="1">全部</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="2">已发布</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="3">审核中</a></li>
                                            <li><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="4">草稿箱</a></li>
                                            <li class="active"><a asp-controller="Post" asp-action="ArticleManager" asp-route-flag="5">回收站</a></li>
                                            break;
                                    }

                                }
                            </ul>
                        </div>
                        <div style="margin: 5px 0px 10px; padding: 0 5px; line-height: 60px; background-color: #F2F5F7;">搜索</div>
                        
                        @foreach(var item in Model)
                        {
                            <div id="post-lists" style="padding: 1rem 0;">
                                <div style="display: flex">
                                    <h5 style="margin: 0; color: #656565;cursor: pointer"><a target="_blank" title="编辑">@item.Title</a></h5>
                                    @if (item.BlogType == ArticleSource.Original)
                                    {
                                        <span id="blogtype1" style="position: relative;padding-left: 9px;color: white;font-size: 10px;padding-top: 0;background-color: #5bea37;line-height: 20px;height: 20px;margin: 0;margin-left: 10px;width: 42px; margin-right: 50px;cursor: pointer">原创</span>
                                    }
                                    else if (item.BlogType == ArticleSource.Transport)
                                    {
                                        <span id="blogtype2" style="position: relative;padding-left: 9px;color: white;font-size: 10px;padding-top: 0;background-color: #3ba8f5;line-height: 20px;height: 20px;margin: 0;margin-left: 10px;width: 42px; margin-right: 50px;cursor: pointer">转载</span>
                                    }
                                    else
                                    {
                                        <span id="blogtype3" style="position: relative;padding-left: 9px;color: white;font-size: 10px;padding-top: 0;background-color: #f9cd2f;line-height: 20px;height: 20px;margin: 0;margin-left: 10px;width: 42px; margin-right: 50px;cursor: pointer">翻译</span>
                                    }


                                </div>
                                <div style="border-bottom: 1px dotted #ddd; display: flex; position: relative; cursor: pointer; padding-bottom: 5px;">
                                    <div style="display: flex">
                                        <p>@item.CreateTime.ToString("yyyy-MM-dd HH:mm")</p>
                                        <p class="info">阅读：@item.ViewCount</p>
                                        <p class="info">评论：@item.CommonCount</p>
                                    </div>
                                    <div style="position: absolute; right: 5px; cursor: pointer;font-size: 15px;">
                                        <span style="color: #3ba8f5">查看</span> 
                                        <span style="color: #cccccc">|</span> 
                                        <span class="text-success">编辑</span>
                                        <span style="color: #cccccc">|</span> 
                                        <span style="color: orange">删除</span>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        
                        <div id="pages">
                            <div>
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination" id="mypage">
                                        <li class="page-item">
                                            <a class="page-link" href="#" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        @{
                                            var pages = Model.Count() % 2 == 0 ? Model.Count() / 2 : Model.Count() / 2 + 1;
                                            for (int i = 1; i <= pages; i++)
                                            {
                                                if (i==1)
                                                {
                                                    <li class="page-item my-page active"><a class="page-link">@i</a></li>
                                                }
                                                else
                                                {
                                                    <li class="page-item my-page"><a class="page-link">@i</a></li>
                                                }
                                                
                                            }
                                        }
                                        <li class="page-item">
                                            <a class="page-link" href="#" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        
                    </div>
                </div>

                <!--页脚-->
                <footer class="footer">
                    <div class="footer-header">
                        <p>
                            <span>Copyright</span><span>&copy;</span><span>2018&nbsp;&nbsp;</span><a href="#">阿里布布</a><span>
                                &nbsp;&nbsp;Design By
                                zyl
                            </span>
                    </div>
                </footer>
            </div>
        </div>


        <!--附带效果html-->
        <div class="overlay"></div><!--侧边菜单覆盖物-->
        <div class="tooltip bs-tooltip-top scroll-to-top" data-placement="left" data-toggle="tooltip" title="回到顶部">
            <!--回到顶部-->
            <i class="far fa-arrow-alt-circle-up fa-2x"></i>
        </div>
        <div class="tooltip bs-tooltip-top feedback" data-placement="left" data-toggle="tooltip" title="建议反馈">
            <!--问题反馈和回到顶部-->
            <i class="far fa-envelope fa-2x"></i>
        </div>
    </div>
    <script src="~/js/vue/polyfill.min.js"></script>
    <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script src="~/js/jquery/jquery-3.3.1.min.js"></script>
    <!-- Popper.JS -->
    <script src="~/js/bootstrap/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/js/bootstrap/bootstrap.min.js"></script>
    <!--bootstrap 下拉框-->
    <script src="~/js/bootstrap/bootstrap-select.min.js"></script>
    <!-- jQuery Custom Scroller CDN -->
    <script src="~/js/jquery/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/axios/axios.min.js"></script>
    <!--tag 输入框-->
    <script src="~/bootstrap-tokenfield/bootstrap-tokenfield.min.js"></script>
    <script src="~/js/vue/vue.js"></script>
    <script src="~/js/holder/holder.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/posts/manager.js"></script>
    <script type="text/javascript">

    </script>
</body>
</html>
