
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>VueLayout</title>
	<environment include="Development">
		<link rel="stylesheet" asp-href-include="~/css/vender.css" />
		<link rel="stylesheet" asp-href-include="~/css/index.css" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" asp-href-include="~/css/all.min.css" />
		<link rel="stylesheet" asp-href-include="~/css/index.min.css" />
	</environment>
	
</head>
<body>
	<div id="app">
		{{message}}
	</div>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.15.2/axios.js"></script>
	<environment include="Development">
		<script src="~/js/vendor.js"></script>
		<script src="~/js/home.js"></script>
	</environment>
	<environment exclude="Development">
		<script type="text/javascript" asp-src-include="~/js/all.min.js"></script>
		<script src="~/js/home.js"></script>
	</environment>
</body>
</html>
